<div class="row">
    <%= form_tag search_products_path , :method => :get, :class => "products-search-form" do %>
      <div class="input-group">
        <input type="text" class="form-control search-bar-input" name="q" value="<%= params[:q] %>" placeholder="输入关键词">

        <span class="input-group-btn">
          <button type="submit" class="btn btn-default search-bar-submit">
            <i class="fa fa-search"> </i>
              搜索
          </button>
        </span>
      </div>
    <% end %>
</div>
