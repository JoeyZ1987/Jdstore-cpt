<!-- 模块一 分类导航 -->

<div class="container">
  <div class="text-center product-nav">
      <ul class="nav nav-pills">
        <li class="text"><a href='/products'>全部商品</a></li>
        <% Category.all.each do |category| %>
        <li class="text"><%= link_to category.name, products_path(category: category.name), class: "link" %></li>
        <% end %>
      </ul>
  </div>
</div>

<!-- 模块二 产品列表 -->
<div class="container-fluid bg-color3">

<div class="container">
 <div class="col-lg-12  col-md-12  products sp-2 sp-1 ">

  <!-- 产品页路径 -->
     <!-- <ol class="breadcrumb">
       <li><a href="/products">全部商品</a></li>
       <li class="active"><a herf=""></a></li>
     </ol> -->

  <!-- 产品列表 -->
  <!-- <div class="col-md-12 product-list center-block"> -->
    <% @products.each do |product| %>
      <div class=" product-grid col-lg-3  col-md-3 col-sm-4 col-xs-6">
        <%= link_to product_path(product) do %>
          <% if product.image.present? %>
            <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No-Picture", class: "thumbnail") %>
          <% end %>
        <% end %>
        <p class="title nomargin">
          <%= product.title %>
        </p>
        <p class="price">
          ￥ <%= product.price %>
        </p>
      </div>
    <% end %>
  <!-- </div> -->
  <!-- 分页器 -->

    <div class="col-xs-12 text-center pagination nomargin">
      <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
    </div>

</div>
</div>
</div>

