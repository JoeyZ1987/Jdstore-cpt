<!-- 模块一 产品 -->
<div class="products bg-color2 sp-1">

  <!-- 菜单栏 -->
 <div class="row">
     <div class="menu">
       <div class="tabs">
         <div class="col-md-6 col-md-offset-3">
         <ul class="nav nav-tabs">

             <li class="active"><a data-toggle="tab" aria-expanded="true"><%= link_to("全部商品", products_path)%></a></li>
             <% Category.all.each do |category| %>
             <li class=""><a data-toggle="tab" aria-expanded="false"><%= link_to category.name, products_path(category: category.name), class: "link" %></a></li>
             <% end %>

         </ul>
         </div>
       </div>
     </div>

</div>


  <!-- product 列表 -->
  <div class="row">
    <% @products.each do |product| %>
      <div class=" product-grid col-lg-2 col-md-3 col-sm-4 col-xs-6">
        <%= link_to product_path(product) do %>
          <% if product.image.present? %>
            <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No-Picture", class: "thumbnail") %>
          <% end %>
        <% end %>
        <%= product.title %> ￥ <%= product.price %>
      </div>
    <% end %>
  </div>

  <!-- 分页器 -->
  <div class="row">
    <div class="col-xs-12 text-center pagination nomargin">
      <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
    </div>
  </div>

</div>

